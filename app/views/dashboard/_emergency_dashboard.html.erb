<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="text-primary">
      <i class="bi bi-hospital"></i> Emergency Organization Dashboard
    </h2>
    <span class="badge bg-secondary">Logged in as: <%= current_user.email %></span>
  </div>

  <hr>

  <div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
      <h4 class="mb-0">
        <i class="bi bi-exclamation-triangle"></i> Emergency Organizations
      </h4>
    </div>
    <div class="card-body">
      <% if @organizations.present? %>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>Name</th>
                <th>State</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @organizations.each do |organization| %>
                <tr>
                  <td><strong><%= organization.name %></strong></td>
                  <td>
                    <span class="badge bg-info text-dark"><%= organization.state || "Not specified" %></span>
                  </td>
                  <td>
                    <span class="badge bg-secondary"><%= organization.emergency_organization_type || "N/A" %></span>
                  </td>
                  <td>
                    <% if organization.approved %>
                      <span class="badge bg-success">Approved</span>
                    <% else %>
                      <span class="badge bg-danger">Pending</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "View", organization_path(organization), class: "btn btn-primary btn-sm me-2" %>
                    <% unless organization.approved %>
                      <%= form_with url: approve_admin_emergency_organization_path(organization), method: :patch, class: "d-inline" do %>
                        <%= submit_tag "Approve", class: "btn btn-success btn-sm me-2", data: { confirm: "Approve #{organization.name}?" } %>
                      <% end %>
                      <%= form_with url: reject_admin_emergency_organization_path(organization), method: :patch, class: "d-inline" do %>
                        <%= submit_tag "Reject", class: "btn btn-danger btn-sm", data: { confirm: "Reject #{organization.name}?" } %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info text-center">
          <i class="bi bi-check-circle"></i> No pending emergency organizations.
        </div>
      <% end %>
    </div>
  </div>
</div>