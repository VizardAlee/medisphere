<div class="container py-5">
  <!-- Welcome Section -->
  <div class="text-center mb-5">
    <h1 class="display-4">Welcome, <%= @user.email %>!</h1>
    <p class="lead">Your dashboard gives you access to all your health records and tools.</p>
    <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger mt-3' %>
  </div>

  <!-- Health Records Section -->
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Your Health Records</h2>
    </div>
    <div class="card-body">
      <% if @records.any? %>
        <ul class="list-group">
          <% @records.each do |record| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= record.title %></span>
              <span class="badge bg-secondary"><%= record.created_at.to_formatted_s(:short) %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="alert alert-info text-center" role="alert">
          No health records found. <a href="#" class="alert-link">Add a record</a>.
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Create Staff", new_staff_path, class: "btn btn-primary" %>
<%= link_to "Create Organization", new_organization_path, class: "btn btn-primary" %>
