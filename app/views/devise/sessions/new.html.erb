<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Log in</h2>
          <p class="text-muted">Welcome back! Please log in to your account</p>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
            <!-- Phone or Email Field -->
            <div class="form-group mb-3">
              <%= f.label :login, "Phone Number or Email", class: "form-label" %>
              <%= f.text_field :login, autofocus: true, class: "form-control" %>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <!-- Remember Me Checkbox -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-4">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Remember Me", class: "form-check-label" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <!-- Links -->
          <div class="mt-4 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
