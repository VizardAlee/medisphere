<!-- app/views/emergency_records/index.html.erb -->
<div class="container mt-5">
  <h1>Emergency Records</h1>
  <% if @emergency_records.any? %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Details</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @emergency_records.each do |record| %>
            <tr>
              <td><%= record.id %></td>
              <td><%= record.details || "N/A" %></td> <!-- Adjust based on your model -->
              <td><%= link_to "View", emergency_record_path(record), class: "btn btn-primary btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-muted">No emergency records available.</p>
  <% end %>
</div>