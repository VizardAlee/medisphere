<h2>Search Emergency Patient Records</h2>

<%= form_with url: search_emergency_records_path, method: :get, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :id, "National ID or Phone Number" %>
    <%= form.text_field :id, class: "form-control", placeholder: "Enter NIN or phone number", required: true %>
  </div>

  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>
