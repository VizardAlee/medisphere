<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-danger text-white text-center">
          <h1 class="mb-0">Add New Emergency Respondent</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @respondent, url: emergency_respondents_path, local: true, html: { class: "needs-validation", novalidate: "" }) do |form| %>
            <% if @respondent.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading"><%= pluralize(@respondent.errors.count, "error") %> prohibited this respondent from being saved:</h4>
                <ul class="mb-0">
                  <% @respondent.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= form.label :name, class: "form-label fw-bold" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter respondent's name", required: true %>
              <div class="invalid-feedback">
                Please provide a name.
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :email, class: "form-label fw-bold" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter respondent's email", required: true %>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :phone, class: "form-label fw-bold" %>
              <%= form.telephone_field :phone, class: "form-control", placeholder: "Enter respondent's phone number", required: true %>
              <div class="invalid-feedback">
                Please provide a phone number.
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password, class: "form-label fw-bold" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter a password", required: true %>
              <div class="invalid-feedback">
                Please provide a password.
              </div>
            </div>

            <div class="form-group mb-4">
              <%= form.label :password_confirmation, class: "form-label fw-bold" %>
              <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm the password", required: true %>
              <div class="invalid-feedback">
                Please confirm the password.
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Create Respondent", class: "btn btn-danger btn-lg" %>
              <%= link_to "Cancel", emergency_respondents_path, class: "btn btn-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Validation Script -->
<script>
  // Enable Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>