<div class="container mt-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Health Records</h1>

    <% if policy(HealthRecord).create? %>
      <%= link_to 'New Health Record', new_health_record_path, class: 'btn btn-success' %>
    <% end %>
  </div>

  <!-- Search Form -->
  <%= form_with url: health_records_path, method: :get, local: true, class: "d-flex mb-3" do |f| %>
    <%= f.text_field :search, value: params[:search], class: "form-control me-2", placeholder: "Search by patient or diagnosis..." %>
    <%= f.submit "Search", class: "btn btn-outline-primary" %>
  <% end %>

  <% if @records.present? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Patient</th>
            <th>Diagnosis</th>
            <th>Prescription</th>
            <th>Updated By</th>
            <th>Created At</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
            <tr>
              <td><%= record.id %></td>
              <td>
                <%= record.patient.present? ? record.patient.name : content_tag(:em, "Unknown") %>
              </td>
              <td><%= record.diagnosis.truncate(50) %></td>
              <td><%= record.prescription.truncate(50) %></td>
              <td><%= record.staff.present? ? record.staff.name : "N/A" %></td>
              <td><%= record.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
              <td class="text-center">
                <div class="btn-group">
                  <%= link_to 'Show', health_record_path(record), class: 'btn btn-sm btn-info' %>
                  <% if policy(record).update? %>
                    <%= link_to 'Edit', edit_health_record_path(record), class: 'btn btn-sm btn-primary' %>
                  <% end %>
                  <% if policy(record).destroy? %>
                    <%= link_to 'Delete', health_record_path(record),
                          method: :delete,
                          data: { confirm: 'Are you sure you want to delete this record?' },
                          class: 'btn btn-sm btn-danger' %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center">
      No health records found.
      <% if policy(HealthRecord).create? %>
        <div class="mt-2">
          <%= link_to 'Create a new record', new_health_record_path, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Back to Dashboard -->
  <% if current_user.admin? || current_user.staff? %>
    <div class="mt-3">
      <%= link_to 'Back to Dashboard', dashboard_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
