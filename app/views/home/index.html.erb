<div class="container py-5">
  <!-- Hero Section -->
  <div class="row justify-content-center text-center">
    <div class="col-md-10">
      <h1 class="fw-bold text-primary">Welcome to MediSphere</h1>
      <p class="lead text-muted">
        The modern solution for seamless and secure health record management.
      </p>
      <div class="mt-4">
        <% if current_user.nil? %>
          <a href="<%= new_user_registration_path %>" class="btn btn-primary btn-lg">Get Started</a>
          <%= link_to "User Login", new_session_path(:user), class: "btn btn-outline-primary btn-lg ms-2" %>
          <%= link_to "Patient Login", new_session_path(:patient), class: "btn btn-outline-secondary btn-lg ms-2" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Role-Based Dashboard -->
  <div class="row mt-5">
    <% if current_user&.admin? %>
      <!-- Admin Section -->
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title text-primary fw-bold">Manage Hospitals & Pharmacies</h5>
            <p class="card-text text-muted">Efficiently add and manage hospitals and pharmacies.</p>
            <a href="<%= hospitals_path %>" class="btn btn-primary">Manage Hospitals</a>
            <a href="<%= pharmacies_path %>" class="btn btn-secondary">Manage Pharmacies</a>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user&.staff? %>
      <!-- Staff Section -->
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title text-success fw-bold">Update Health Records</h5>
            <p class="card-text text-muted">Easily add or update patient diagnoses and prescriptions.</p>
            <a href="<%= health_records_path %>" class="btn btn-success">View Health Records</a>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user&.patient? %>
      <!-- Patient Section -->
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title text-info fw-bold">Your Health Records</h5>
            <p class="card-text text-muted">Access and download your health records anytime.</p>
            <a href="<%= health_records_path(patient_id: current_user.id) %>" class="btn btn-info">View My Records</a>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user&.emergency_respondent? %>
      <!-- Emergency Respondent Section -->
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title text-danger fw-bold">Emergency Access</h5>
            <p class="card-text text-muted">Quickly retrieve emergency patient records.</p>
            <a href="<%= emergency_records_path %>" class="btn btn-danger">Access Emergency Records</a>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user.nil? %>
      <!-- Visitor Section -->
      <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <h5 class="card-title text-dark fw-bold">Join MediSphere Today</h5>
            <p class="card-text text-muted">Sign up or log in to unlock the full features.</p>
            <a href="<%= new_user_registration_path %>" class="btn btn-primary">Sign Up</a>
            <%= link_to "User Login", new_session_path(:user), class: "btn btn-outline-primary ms-2" %>
            <%= link_to "Patient Login", new_session_path(:patient), class: "btn btn-outline-secondary ms-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
