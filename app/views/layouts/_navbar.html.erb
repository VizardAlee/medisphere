<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <!-- Brand / Logo -->
    <a class="navbar-brand" href="<%= root_path %>">
      <% if user_signed_in? && current_user.organization.present? %>
        <%= current_user.organization.name %>
      <% else %>
        MediSphere
      <% end %>
    </a>

    <!-- Mobile Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">Home</a>
        </li>

        <% if user_signed_in? %>
          <!-- Admin -->
          <% if current_user.admin? %>
            <li class="nav-item">
              <a class="nav-link" href="<%= staffs_path %>">Manage Staff</a>
            </li>
            <% if current_user.organization.organization_type == "emergency_respondent" %>
              <li class="nav-item">
                <a class="nav-link" href="<%= admin_emergency_respondents_path %>">Manage Emergency Respondents</a>
              </li>
            <% end %>

          <!-- Emergency Respondent -->
          <% elsif current_user.respond_to?(:emergency_respondent?) && current_user.emergency_respondent? %>
            <li class="nav-item">
              <a class="nav-link" href="<%= emergency_records_path %>">Emergency Records</a>
            </li>
          <% end %>

          <!-- Staff -->
          <% if current_user.staff? %>
            <li class="nav-item">
              <a class="nav-link" href="<%= patients_path %>">Patients</a>
            </li>
          <% end %>

        <% elsif patient_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="<%= patient_health_records_path(current_patient) %>">My Health Records</a>
          </li>
        <% else %>
          <!-- Public / Unauthenticated -->
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_registration_path %>">Sign Up (Staff)</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path %>">Sign In (Staff)</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_patient_session_path %>">Patient Login</a>
          </li>
        <% end %>
      </ul>

      <!-- Right Side: Profile Dropdown -->
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= current_user.name || "Profile" %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <%= link_to "View Profile", staff_path(current_user), class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item", data: { turbo_method: :delete } %>
              </li>
            </ul>
          </li>

        <% elsif patient_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <%= current_patient.name || "My Account" %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <%= link_to "View Profile", patient_path(current_patient), class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to "Logout", destroy_patient_session_path, method: :delete, class: "dropdown-item", data: { turbo_method: :delete } %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
