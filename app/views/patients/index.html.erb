<div class="text-center mb-5">
  <h1 class="display-4">Patient Records</h1>
  <p class="lead">Here is the list of all patients.</p>
</div>

<div class="card shadow-sm">
  <div class="card-header bg-primary text-white">
    <h2 class="mb-0">Patient List</h2>
  </div>
  <div class="card-body">
    <% if @patients.any? %>
      <ul class="list-group">
        <% @patients.each do |patient| %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <strong><%= patient.name %></strong>
              <div>
                <%= link_to "View Profile", patient_path(patient), class: "btn btn-sm btn-outline-primary" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="alert alert-warning text-center">
        No patients found.
        <%= link_to "Register a patient", new_patient_path, class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>
