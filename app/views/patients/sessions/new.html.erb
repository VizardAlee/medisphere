<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Patient Login</h2>
          <p class="text-muted">Use only your phone number</p>
        </div>

        <div class="card-body">
          <%= form_for(@patient, url: patient_session_path, method: :post, data: { turbo: false }) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :phone, "Phone Number", class: "form-label" %>
              <%= f.text_field :phone, class: "form-control", autofocus: true, placeholder: "e.g. +234xxx..." %>
            </div>

            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>