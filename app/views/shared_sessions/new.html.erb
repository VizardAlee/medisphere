<!-- app/views/patients/sessions/new.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Patient Log In by Phone</h2>
          <p class="text-muted">Enter your phone number to log in</p>
        </div>
        <div class="card-body">
          <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
            <!-- Phone Field Only -->
            <div class="form-group mb-3">
              <%= f.label :login, "Phone Number (or Email)", class: "form-label" %>
              <%= f.text_field :login, class: "form-control" %>
            </div>

            <!-- (Optional) Remove or hide the password field if not used -->
            <!--
            <div class="form-group mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
            -->

            <!-- Remember Me Checkbox (Optional) -->
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
