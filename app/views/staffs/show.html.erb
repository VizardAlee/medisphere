<!-- app/views/staffs/show.html.erb -->
<div class="container my-5">
  <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeIn">
    <!-- Header -->
    <div class="card-header bg-gradient-primary text-white py-4">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0 fw-bold">
          <i class="bi bi-person-lines-fill me-2"></i>Staff Profile
        </h2>
        <div>
          <%= link_to edit_staff_path(@staff), class: "btn btn-outline-light btn-sm shadow-sm me-2", data: { turbo: false } do %>
            <i class="bi bi-pencil me-1"></i>Edit
          <% end %>
          <%= link_to dashboard_path, class: "btn btn-outline-light btn-sm shadow-sm", data: { turbo: false } do %>
            <i class="bi bi-arrow-left me-1"></i>Back
          <% end %>
        </div>
      </div>
    </div>

    <!-- Body -->
    <div class="card-body p-5 bg-light">
      <div class="row align-items-center">
        <!-- Staff Photo -->
        <div class="col-md-4 text-center animate__animated animate__zoomIn" style="animation-delay: 0.2s;">
          <% if @staff.photo.attached? %>
            <%= image_tag @staff.photo, class: "img-fluid rounded-circle shadow-lg mb-3 border border-primary-subtle", style: "max-width: 200px; height: 200px; object-fit: cover;" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "img-fluid rounded-circle shadow-lg mb-3 border border-muted", alt: "Default Avatar", style: "max-width: 200px; height: 200px; object-fit: cover;" %>
          <% end %>
          <h4 class="mt-2 fw-bold text-primary"><%= @staff.name %></h4>
          <p class="text-muted small">
            <%= @staff.staff_role&.humanize || "Staff" %>
            <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill ms-2">
              <%= @staff.role.humanize %>
            </span>
          </p>
        </div>

        <!-- Staff Information -->
        <div class="col-md-8 animate__animated animate__fadeInRight" style="animation-delay: 0.4s;">
          <div class="card border-0 shadow-sm rounded-3 bg-white">
            <ul class="list-group list-group-flush">
              <li class="list-group-item py-3">
                <strong class="text-muted"><i class="bi bi-envelope me-2"></i>Email:</strong>
                <span class="ms-2"><%= @staff.email %></span>
              </li>
              <% if @staff.phone.present? %>
                <li class="list-group-item py-3">
                  <strong class="text-muted"><i class="bi bi-telephone me-2"></i>Phone:</strong>
                  <span class="ms-2"><%= @staff.phone %></span>
                </li>
              <% end %>
              <% if @staff.organization.present? %>
                <li class="list-group-item py-3">
                  <strong class="text-muted"><i class="bi bi-building me-2"></i>Organization:</strong>
                  <span class="ms-2"><%= @staff.organization.name %></span>
                </li>
              <% end %>
              <% if @staff.qualification.present? %>
                <li class="list-group-item py-3">
                  <strong class="text-muted"><i class="bi bi-award me-2"></i>Qualifications:</strong>
                  <span class="ms-2"><%= @staff.qualification %></span>
                </li>
              <% end %>
              <% if @staff.years_of_experience.present? %>
                <li class="list-group-item py-3">
                  <strong class="text-muted"><i class="bi bi-clock-history me-2"></i>Experience:</strong>
                  <span class="ms-2"><%= @staff.years_of_experience %> years</span>
                </li>
              <% end %>
              <li class="list-group-item py-3">
                <strong class="text-muted"><i class="bi bi-calendar-check me-2"></i>Joined on:</strong>
                <span class="ms-2"><%= @staff.created_at.strftime("%B %d, %Y") %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS -->
<style>
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff, #00d4ff);
  }
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2) !important;
  }
  .btn {
    transition: all 0.3s ease;
  }
  .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
  }
  .btn-outline-light {
    border-width: 2px;
  }
  .list-group-item {
    border-bottom: 1px solid rgba(0, 123, 255, 0.1);
  }
  .list-group-item:last-child {
    border-bottom: none;
  }
  .img-fluid.rounded-circle {
    border: 4px solid #e9ecef;
    transition: border-color 0.3s ease;
  }
  .img-fluid.rounded-circle:hover {
    border-color: #007bff;
  }
  .badge {
    font-size: 0.9rem;
    padding: 0.5em 1em;
  }
</style>

<!-- Include Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">