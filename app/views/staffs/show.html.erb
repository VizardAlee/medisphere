<div class="container my-5">
  <div class="card shadow-lg">
    <!-- Header -->
    <div class="card-header bg-primary text-white d-flex align-items-center">
      <h2 class="mb-0">Staff Profile</h2>
    </div>

    <!-- Body -->
    <div class="card-body">
      <div class="row">
        <!-- Staff Photo -->
        <div class="col-md-4 text-center">
          <% if @staff.photo.attached? %>
            <img src="<%= url_for(@staff.photo) %>" alt="Staff photo" class="img-fluid rounded-circle shadow-sm mb-3" style="max-width: 180px;">
          <% else %>
            <%= image_tag "default_avatar.png", class: "img-fluid rounded-circle shadow-sm mb-3", alt: "Default Avatar", style: "max-width: 180px;" %>
          <% end %>
          <h4 class="mt-2"><%= @staff.name %></h4>
        </div>

        <!-- Staff Information -->
        <div class="col-md-8">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Email:</strong> <%= @staff.email %></li>
            <% if @staff.phone.present? %>
              <li class="list-group-item"><strong>Phone:</strong> <%= @staff.phone %></li>
            <% end %>
            <li class="list-group-item">
              <strong>Role:</strong> <%= @staff.role.humanize %> 
              <% if @staff.staff? && @staff.staff_role.present? %>
                (<%= @staff.staff_role.humanize %>)
              <% end %>
            </li>
            <% if @staff.organization.present? %>
              <li class="list-group-item"><strong>Organization:</strong> <%= @staff.organization.name %></li>
            <% end %>
            <% if @staff.qualification.present? %>
              <li class="list-group-item"><strong>Qualifications:</strong> <%= @staff.qualification %></li>
            <% end %>
            <% if @staff.years_of_experience.present? %>
              <li class="list-group-item"><strong>Experience:</strong> <%= @staff.years_of_experience %> years</li>
            <% end %>
            <li class="list-group-item"><strong>Joined on:</strong> <%= @staff.created_at.strftime("%B %d, %Y") %></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Footer (Buttons) -->
    <div class="card-footer text-right">
      <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-secondary" %>
      <%= link_to "Edit Profile", edit_staff_path(@staff), class: "btn btn-primary ml-2" %>
    </div>
  </div>
</div>
